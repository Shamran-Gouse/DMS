@using DMS.Models
@model Defect

@using (Html.BeginForm("Close", "Defect", new { @id = Model.Row_id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-sm-3 pull-right col-sm-offset-1">
        <button type="submit" class="btn btn-success form-control"> Close </button>
    </div>
}

@using (Html.BeginForm("ReAssign", "Defect", new { @id = Model.Row_id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-sm-offset-1 col-sm-3 pull-right">
        <button type="submit" class="btn btn-danger form-control"> Re - Assign </button>
    </div>
}

