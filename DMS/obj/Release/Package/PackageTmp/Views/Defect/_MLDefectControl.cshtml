@using DMS.Models
@model Defect

@using (Html.BeginForm("AssignTODeveloper", "Defect", new { @id = Model.Row_id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <label for="TestStatus" class="col-sm-3 control-label"> RCA </label>

    <div class="col-sm-4">
        @Html.DropDownListFor(model => model.RCA, DefectMethods.GetRCAresult(), "Select RCA", new { @class = "form-control" })
        @Html.ValidationMessage("UserError", new { @class = "text-danger" })
    </div>

    <div class="col-sm-2">
        <button type="submit" class="btn btn-success form-control"> Assign to Developer </button>
    </div>
}


@using (Html.BeginForm("MLReject", "Defect", new { @id = Model.Row_id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-sm-2">
        <button type="submit" class="btn btn-danger form-control"> Reject </button>
    </div>
}
