@using DMS.Models
@model System.Data.DataTable

@{
    ViewBag.Title = "View Test Cases";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Test case
            <small>
                Details
            </small>
        </h1>
    </section>

    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Test")"><i class="fa fa-wrench" aria-hidden="true"></i> Test </a></li>
        <li class="active">Test Case Detail</li>
    </ol>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"> SubModule </h3>
                        <div class="clearfix"></div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Project ID</th>
                                    <th>Module ID</th>
                                    <th>Sub Module ID</th>
                                    <th>Test Case Title</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>


                                @for (int i = 0; i < Model.Rows.Count; i++)
                                {
                                    <tr>
                                        <td>@Model.Rows[i][1]</td>
                                        <td>@Model.Rows[i][2]</td>
                                        <td>@Model.Rows[i][3]</td>
                                        <td>@Model.Rows[i][4]</td>
                                        <td>@Model.Rows[i][5]</td>


                                        <td>
                                            &nbsp;
                                            <a href="@Url.Action("TestSteps", "Test", new { @id = @Model.Rows[i][0] })"> Test Steps </a>
                                            &nbsp;
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div>
<!-- /.content-wrapper -->


