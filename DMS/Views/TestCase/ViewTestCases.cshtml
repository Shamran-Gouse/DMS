@using DMS.Models
@model System.Data.DataTable

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Test case
            <small>
                Details
            </small>
        </h1>
    </section>

    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "TestCase")"><i class="fa fa-file-text" aria-hidden="true"></i> Test Cases</a></li>
        <li class="active">Test Case Detail</li>
    </ol>

    <!-- Main content -->
    <section class="content">
        <div class="row" style="margin-bottom: 2%;">
            <div class="col-md-2 col-xs-2" style="float:right;">
                <a href="@Url.Action("Create", "TestCase", new { @Pid = Request.QueryString["Pid"], @Mid = Request.QueryString["Mid"], @SMid = Request.QueryString["SMid"] })" class="btn btn-block btn-primary"> Create </a>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"> SubModule </h3>
                        <div class="clearfix"></div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Project ID</th>
                                    <th>Module ID</th>
                                    <th>Sub Module ID</th>
                                    <th>Test Case Title</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>


                                @for (int i = 0; i < Model.Rows.Count; i++)
                                {
                                    <tr>
                                        <td>@Model.Rows[i][1]</td>
                                        <td>@Model.Rows[i][2]</td>
                                        <td>@Model.Rows[i][3]</td>
                                        <td>@Model.Rows[i][4]</td>
                                        <td>@Model.Rows[i][5]</td>


                                        <td>
                                                <a href="@Url.Action("Edit", "TestCase", new { @id = @Model.Rows[i][0] })"> Edit </a>
                                                &nbsp;
                                                <a href="@Url.Action("index", "TestCaseSteps", new { @id = @Model.Rows[i][0] })"> Steps </a>
                                                &nbsp;
                                                <a href="@Url.Action("Delete", "TestCase", new { @id = @Model.Rows[i][0], @Pid = @Model.Rows[i][1], @Mid = @Model.Rows[i][2], @SMid = @Model.Rows[i][3] })" onclick="return confirm('Are you sure you wish to delete this Test Case?');"> Delete </a>
                                            </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div>
<!-- /.content-wrapper -->
