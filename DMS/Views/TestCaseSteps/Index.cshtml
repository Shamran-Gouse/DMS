@using System.Data
@using System.Data.SqlClient
@using DMS.Models
@model TestCaseSteps



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
    var id = Url.RequestContext.RouteData.Values["id"];
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Create Test Case Steps
        </h1>
    </section>

    <ol class="breadcrumb">
        <li><a href="@Url.Action("ViewTestCases", "TestCase", new { @Pid = Model.PID, @Mid = Model.MID, @SMid = Model.SMID })"><i class="fa fa-file-text" aria-hidden="true"></i> Test Case Details</a></li>
        <li class="active"> Create Test Case Steps</li>
    </ol>

    <!-- Main content -->
    <section class="content">
        <div class="row">

            <div class="col-sm-12" style="margin-top:50px;">
                <div class="box box-info">
                    <div class="form-horizontal">

                        <div class="box-header">
                            @{ Html.RenderAction("_TestStepsHeader", "TestCaseSteps", new { id = Convert.ToInt32(id) }); }
                        </div>


                        <div class="box-body">
                            @* Step Table list view *@
                            @{ Html.RenderAction("_StepTable", "TestCaseSteps", new { id = Convert.ToInt32(id) }); }
                        </div><!-- /.box-body -->


                        <div class="box-footer">
                            <!-- form start -->
                            @{ Html.RenderAction("_Create", "TestCaseSteps", new { id = Convert.ToInt32(id) }); }
                        </div>




                    </div>
                </div><!-- /.box -->
            </div><!--/.col (right) -->
        </div>   <!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->




