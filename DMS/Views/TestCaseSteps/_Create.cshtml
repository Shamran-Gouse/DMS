@model DMS.Models.TestCaseSteps


@using (Html.BeginForm("_Create", "TestCaseSteps", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="box-body">

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        @Html.EditorFor(model => model.Step, new { htmlAttributes = new { @class = "form-control", @placeholder = "Step" } })
                        @Html.ValidationMessageFor(model => model.Step, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="form-group">
                        @Html.EditorFor(model => model.StepData, new { htmlAttributes = new { @class = "form-control", @placeholder = "Step Data" } })
                        @Html.ValidationMessageFor(model => model.StepData, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-sm-4">
                    <div class="form-group">
                        @Html.EditorFor(model => model.ExpectedResult, new { htmlAttributes = new { @class = "form-control", @placeholder = "Expected Result" } })
                        @Html.ValidationMessageFor(model => model.ExpectedResult, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-sm-1">
                    <button type="submit" class="btn btn-info pull-right"> Add </button>
                </div>

            </div>

        </div><!-- /.box-body -->

    </div>
}
