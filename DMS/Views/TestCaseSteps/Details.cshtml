@using DMS.Models
@model System.Data.DataTable

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (Model.Rows.Count < 1)
    {
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Test Case Steps
                </h1>
            </section>
            <!-- Main content -->
            <section class="content">
                <div class="row">

                    <div class="col-md-offset-2 col-md-8" style="margin-top:50px;">
                        <div class="box box-info">
                            <div class="form-horizontal">
                                <div class="box-body">
                                    <h1> There is no steps in DataBase! </h1>
                                </div><!-- /.box-body -->
                            </div>
                        </div><!-- /.box -->
                    </div><!--/.col (right) -->
                </div>   <!-- /.row -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->

    }
    else
    {

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Test Case Steps
                </h1>
            </section>

            <ol class="breadcrumb">
                <li><a href="@Url.Action("ViewTestCases", "TestCase", new { @Pid = Model.Rows[0][1], @Mid = Model.Rows[0][2], @SMid = Model.Rows[0][3] })"><i class="fa fa-file-text" aria-hidden="true"></i> Test Cases</a></li>
                <li class="active"> Test Case Steps</li>
            </ol>

            <!-- Main content -->
            <section class="content">
                <div class="row">

                    <div class="col-md-offset-2 col-md-8" style="margin-top:50px;">
                        <div class="box box-info">
                            <div class="form-horizontal">
                                <div class="box-header">
                                    <div class="form-group">
                                        <label for="TCID" class="col-sm-3 control-label">Test Case ID</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="col-sm-9 form-control" id="TCID" placeholder="Test Case ID" value="@Model.Rows[0][4]" readonly>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="TestCaseTitle" class="col-sm-3 control-label">Test Case Title</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="col-sm-9 form-control" id="TestCaseTitle" placeholder="Test Case Title" value="@Model.Rows[0][5]" readonly>
                                        </div>
                                    </div>
                                </div>


                                <div class="box-body">
                                    <table class="table table-bordered">
                                        <tr>
                                            <th style="width: 20px">#</th>
                                            <th>Step </th>
                                            <th>Step Data </th>
                                            <th> Expected Result </th>
                                            <th style="width: 5%"> Actions </th>
                                        </tr>

                                        @for (int i = 0; i < Model.Rows.Count; i++)
                                        {
                                            <tr>
                                                <td>@Model.Rows[i][6]</td>
                                                <td>@Model.Rows[i][7]</td>
                                                <td>@Model.Rows[i][8]</td>
                                                <td>@Model.Rows[i][9]</td>


                                                <td>
                                                    <a href="@Url.Action("Edit", "Module", new { @Pid = @Model.Rows[i][0], @Mid = @Model.Rows[i][1] })"><i class="fa fa-pencil" aria-hidden="true"></i> </a>
                                                    &nbsp;
                                                    &nbsp;
                                                    <a href="@Url.Action("Delete", "Module", new { @Pid = @Model.Rows[i][0], @Mid = @Model.Rows[i][1] })" onclick="return confirm('Are you sure you wish to delete this Module?');"> <i class="fa fa-trash" aria-hidden="true"></i> </a>
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                </div><!-- /.box-body -->
                            </div>
                        </div><!-- /.box -->
                    </div><!--/.col (right) -->
                </div>   <!-- /.row -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->

    }
}