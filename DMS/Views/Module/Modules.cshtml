@using DMS.Models
@model System.Data.DataTable
@{
    ViewBag.Title = "Modules";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Manage
            <small>
                Modules
            </small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"> Modules </h3>
                        <div class="clearfix"></div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Project ID</th>
                                    <th>Module ID</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>


                                @for (int i = 0; i < Model.Rows.Count; i++)
                                {
                                    <tr>
                                        <td>@Model.Rows[i][0]</td>
                                        <td>@Model.Rows[i][1]</td>
                                        <td>@Model.Rows[i][2]</td>

                                        
                                        <td>
                                            &nbsp;
                                            &nbsp;
                                            @*@Html.ActionLink("Create", "Index", "SubModule", new { Pid = @Model.Rows[i][0], Mid = @Model.Rows[i][1] })*@
                                            <a href="@Url.Action("Index", "SubModule", new { Pid = @Model.Rows[i][0], Mid = @Model.Rows[i][1] })"> Manage </a>
                                            &nbsp;
                                            &nbsp;
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div>
<!-- /.content-wrapper -->
